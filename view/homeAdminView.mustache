<div class="container">
    <section class="statistics-overview p-3">
        <h2 class="text-center pb-3">Resumen de Estadísticas</h2>
        <div class="container-fluid">
            <div class="row">
                <div class="col-6">
                    <div class="shadow p-3 mb-5 bg-body-tertiary rounded p-4">
                        <ul>
                            <li><strong>Cantidad Total de Jugadores:</strong> {{total_users}}</li>
                            <li><strong>Cantidad Total de Partidas Jugadas:</strong> {{total_games}}</li>
                            <li><strong>Cantidad Total de Preguntas en el Juego:</strong> {{total_questions}}</li>
                            <li><strong>Cantidad Total de Preguntas Creadas:</strong> {{createdQuestions}}</li>
                            <li><strong>Cantidad de Usuarios Nuevos:</strong> {{newUsers}}</li>
                            <li><strong>Promedio de Edad:</strong> {{promedio_edad}}</li>
                            <li><strong>Total de usuarios por país:</strong> {{totalUserForCountries}}</li>
                            <li><strong>Promedio de aciertos:</strong> {{ratioForAccierts}}</li>
                        </ul>
                    </div>
                </div>
                <div class="col-6">
                    <div class="shadow p-3 mb-5 bg-body-tertiary rounded p-4">
                        <div>
                            <p><strong>Cantidad de Usuarios por Sexo:</strong></p>
                            <ul>
                                <li><strong>Masculino:</strong> {{totalDeHombres}}</li>
                                <li><strong>Femenino:</strong> {{totalDeMujeres}}</li>
                                <li><strong>Elle:</strong> {{totalDeElles}}</li>
                            </ul>
                        </div>
                        <div>
                            <p><strong>Cantidad de Usuarios por Grupo de Edad:</strong></p>
                            <ul>
                                <li><strong>Menores:</strong> {{promedio_edad_menores}}</li>
                                <li><strong>Edad Media:</strong> {{promedio_edad_adultos}}</li>
                                <li><strong>Jubilados:</strong> {{promedio_edad_adultosMayores}}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>




    <div class="filter">

        <section class="user-demographics">
            <h2>Estadísticas de Género de Usuarios</h2>
            <form id="filterUserForm" class="d-inline">
                <button class="btn btn-primary" id="generatePdfGenre">
                    Imprimir PDF Género
                </button>
                <input type="date" id="questionFilterDate" name="questionFilterDate">
                <button type="button" id="filterUserChart" class="btn btn-secondary">Filtrar Usuarios</button>
            </form>
            <div>
                <p><strong>Cantidad de Usuarios por Género:</strong></p>
                <div class="genre">
                    <img id="userChart" src="{{userGenre}}" alt="Gráfico de usuarios por país">
                </div>
            </div>
        </section>
    </div>

    <div class="filter_pais">
        <section class="user-demographics">
            <h2>Estadísticas Demograficas de Usuarios</h2>
            <form id="filterQuestionForm" class="d-inline">
                <button class="btn btn-primary" id="generatePdfCountry">
                    Imprimir PDF País
                </button>
                <input type="date" id="userFilterDate" name="questionFilterDate">
                <button type="button" id="filterQuestionChart" class="btn btn-secondary">Filtrar Preguntas</button>
            </form>
            <div>
                <p><strong>Cantidad de Usuarios por País:</strong></p>
                <div class="country">
                    <img id="questionChart" src="{{questionChart}}" alt="Gráfico de usuarios por país">
                </div>
            </div>
        </section>
    </div>
</div>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            fetchChart("genre");
            fetchChart("country");
        });

        function fetchChart(type) {
            const filterDate =
                    type === "genre"
                            ? document.getElementById("questionFilterDate").value
                            : document.getElementById("userFilterDate").value;

            const now = new Date();
            const defaultDate = `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, "0")}-01`;

            const dateToSend = filterDate || defaultDate;

            fetch('/PreguntasYRespuestasPHP/admin/filterStats', {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    date: dateToSend,
                    type: type,
                }),
            })
                    .then((response) => {
                        if (!response.ok) {
                            throw new Error("Error al obtener los datos");
                        }
                        return response.text();
                    })
                    .then((data) => {
                        const targetImg = type === "genre" ? "userChart" : "questionChart";
                        const targetContainer = document.getElementById(targetImg).parentElement;

                        if (data.startsWith("data:image")) {
                            document.getElementById(targetImg).src = data;
                            document.getElementById(targetImg).style.display = "block";
                            if (targetContainer.querySelector('.no-data-message')) {
                                targetContainer.querySelector('.no-data-message').remove();
                            }
                        } else {
                            document.getElementById(targetImg).style.display = "none";
                            if (!targetContainer.querySelector('.no-data-message')) {
                                const noDataMessage = document.createElement("p");
                                noDataMessage.textContent = "No hay datos disponibles para generar el gráfico.";
                                noDataMessage.classList.add("no-data-message");
                                noDataMessage.style.color = "red";
                                noDataMessage.style.fontStyle = "italic";
                                targetContainer.appendChild(noDataMessage);
                            }
                        }
                    })
                    .catch((error) => {
                        console.error("Error:", error);
                    });
        }

        document.getElementById("filterUserChart").addEventListener("click", function () {
            fetchChart("genre");
        });

        document.getElementById("filterQuestionChart").addEventListener("click", function () {
            fetchChart("country");
        });

        function generatePdf(type) {
            const filterDate =
                    type === "genre"
                            ? document.getElementById("questionFilterDate").value
                            : document.getElementById("userFilterDate").value;

            const now = new Date();
            const defaultDate = `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, "0")}-01`;

            const dateToSend = filterDate || defaultDate;

            fetch('/PreguntasYRespuestasPHP/admin/generatePdf', {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    date: dateToSend,
                    type: type,
                }),
            })
                    .then((response) => {
                        if (!response.ok) {
                            throw new Error("Error al generar el PDF");
                        }
                        return response.blob();
                    })
                    .then((blob) => {
                        const url = URL.createObjectURL(blob);
                        const a = document.createElement("a");
                        a.href = url;
                        a.download = "reporte_graficos.pdf";
                        a.click();
                    })
                    .catch((error) => {
                        console.error("Error:", error);
                    });
        }


        document.getElementById("generatePdfGenre").addEventListener("click", function (e) {
            e.preventDefault();
            generatePdf("genre");
        });

        document.getElementById("generatePdfCountry").addEventListener("click", function (e) {
            e.preventDefault();
            generatePdf("country");
        });

    </script>

