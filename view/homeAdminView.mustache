    <script>
        function fetchChart(type) {
            // Obtener el valor de la fecha según el tipo de gráfico
            const filterDate =
                    type === "user"
                            ? document.getElementById("userFilterDate").value
                            : document.getElementById("questionFilterDate").value;

            // Obtener el mes actual y establecer la fecha por defecto si no se selecciona
            const now = new Date();
            const defaultDate = `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, "0")}-01`;

            const dateToSend = filterDate || defaultDate;

            // Realizar la solicitud POST para obtener el gráfico
            fetch('/PreguntasYRespuestasPHP/admin/filterStats', {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    date: dateToSend,
                    type: type,
                }),
            })
                    .then((response) => {
                        if (!response.ok) {
                            throw new Error("Error al obtener los datos");
                        }
                        return response.text();
                    })
                    .then((data) => {
                        const targetImg = type === "user" ? "countryChart" : "questionChart";
                        document.getElementById(targetImg).src = data;
                    })
                    .catch((error) => {
                        console.error("Error:", error);
                    });
        }

        // Event listeners para cada botón de filtrado
        document.getElementById("filterUserChart").addEventListener("click", function () {
            fetchChart("user");
        });

        document.getElementById("filterQuestionChart").addEventListener("click", function () {
            fetchChart("question");
        });
    </script>