<div class="container">
    <section class="statistics-overview p-3">
        <h2 class="text-center pb-3">Resumen de Estadísticas</h2>
        <div class="container-fluid">
            <div class="row">
                <div class="col-6">
                    <div class="shadow p-3 mb-5 bg-body-tertiary rounded p-4">
                        <ul>
                            <li><strong>Cantidad Total de Jugadores:</strong> {{total_users}}</li>
                            <li><strong>Cantidad Total de Partidas Jugadas:</strong> {{total_games}}</li>
                            <li><strong>Cantidad Total de Preguntas en el Juego:</strong> {{total_questions}}</li>
                            <li><strong>Cantidad Total de Preguntas Creadas:</strong> {{createdQuestions}}</li>
                            <li><strong>Cantidad de Usuarios Nuevos:</strong> {{newUsers}}</li>
                        </ul>
                    </div>
                </div>
                <div class="col-6">
                    <div class="shadow p-3 mb-5 bg-body-tertiary rounded p-4">
                        <div>
                            <p><strong>Cantidad de Usuarios por Sexo:</strong></p>
                            <ul>
                                <li><strong>Masculino:</strong> {{maleUsers}}</li>
                                <li><strong>Femenino:</strong> {{femaleUsers}}</li>
                            </ul>
                        </div>
                        <div>
                            <p><strong>Cantidad de Usuarios por Grupo de Edad:</strong></p>
                            <ul>
                                <li><strong>Menores:</strong> {{youngUsers}}</li>
                                <li><strong>Edad Media:</strong> {{middleAgedUsers}}</li>
                                <li><strong>Jubilados:</strong> {{seniorUsers}}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <section class="question-stats">
        <h2>Estadísticas de Preguntas y Respuestas</h2>
        <p><strong>% de Preguntas Respondidas Correctamente:</strong></p>
        <div class="chart">
            <img src="{{correctAnswersChart}}" alt="Gráfico de respuestas correctas por usuario">
        </div>
    </section>

    <section class="user-demographics">
        <h2>Estadísticas Demográficas de Usuarios</h2>

        <div>
            <p><strong>Cantidad de Usuarios por País:</strong></p>
            <div class="country-chart">
                <img src="{{countryUserChart}}" alt="Gráfico de usuarios por país">
            </div>
        </div>


    </section>
</div>
