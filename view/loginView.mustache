<div class="w3-display-container" style="height:100vh;">
    <div class="w3-display-middle" style="width:50%;">
        <div class="w3-card-4">
            <div class="w3-container w3-center w3-blue">
                <h2>Iniciar sesión</h2>
            </div>
            <div class="w3-container">
                <form action="/PreguntasYRespuestasPHP/index.php/auth/login" method="POST">
                    <div class="w3-margin-bottom" style="padding-top: 10px">
                        <label for="name" class="w3-text-black">Nombre de usuario</label>
                        <input type="text" class="w3-input w3-border" id="username" name="username" placeholder="Juan" required>
                    </div>
                    <div class="w3-margin-bottom">
                        <label for="username" class="w3-text-black">Contraseña</label>
                        <input type="password" class="w3-input w3-border" id="password" name="password" placeholder="*****" required>
                    </div>

                    <div style="margin-bottom: 10px">
                        <button type="submit" class="w3-button w3-block w3-blue">Enviar</button>
                    </div>
                </form>
                <div class="w3-text-red" style="display: flex; justify-content: center; align-items: center; padding-bottom: 10px">{{error_message}}</div>
            </div>
        </div>
    </div>
</div>
