<!-- Header -->
<header class="text-white p-2" style="background-color: #6bffb782;">
    <div class="container-fluid">
        <div class="row">
            <div class="container-fluid">
                <img src="../img/logo.png" style="height:90px" class="pb-2" alt="profile-image">
                {{#token}}
                    <form class="w3-right w3-margin-top" action="/PreguntasYRespuestasPHP/auth/logout" method="POST">
                        <button type="submit" class="btn btn-dark p-3">Cerrar sesión</button>
                    </form>
                {{/token}}
                {{^token}}
                    <form class="w3-right w3-margin-top" action="/PreguntasYRespuestasPHP/auth/initLogin" method="POST">
                        <button type="submit" class="btn btn-dark p-3">Iniciar sesión</button>
                    </form>
                {{/token}}
            </div>
            </div>
        </div>
    </div>
</header>

